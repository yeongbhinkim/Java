package com.work.copy;



public class Account3 implements AccountIf  {
	private String ano;
	private String owner;
	private int balance;
	
	
	public Account3(String ano, String owner, int balance) {
		this.ano = ano;
		this.owner = owner;
		this.balance = balance;
		
	}


	protected String getAno() {
		return ano;
	}



	protected void setAno(String ano) {
		this.ano = ano;
	}



	protected String getOwner() {
		return owner;
	}



	protected void setOwner(String owner) {
		this.owner = owner;
	}



	protected int getBalance() {
		return balance;
	}




	protected void setBalance(int balance) {
		this.balance = balance;
	}

	@Override
	public void deposit(int anount) {		
		if(anount > 20000) {
			throw new IllegalArgumentException("2만원 초과하였습니다.");					
		}else	if(this.balance + anount > 50000) {
			throw new IllegalArgumentException("예금5만원한도 초과하였습니다.");	
		}else{
			this.balance+=anount;			
		}
	}
	

	
	
	@Override
	public int withdraw(int anount) throws Exception{
		if(this.balance<anount) {
			throw new Exception("잔액이 모자랍니다.");
		}else {
			this.balance-=anount;
			return anount;
		}
	}
}
