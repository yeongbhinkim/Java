package com.kh;

public class bhin {

	public static void main(String[] args) {
		// for, while, do-while
		int sum = 0;

		for (int i = 1; i <= 100; i++) {
			if (i % 3 == 0) {
				sum = sum + i;
			}
		}
		System.out.println(sum);

		while (true) {
			int number = (int) (Math.random() * 6) + 1;
			int number2 = (int) (Math.random() * 6) + 1;
			System.out.println("(" + number + ", " + number2 + ")");
			if ((number + number2) == 5) {
				break;
			}
		}
		System.out.println();

		for (int x = 1; x <= 10; x++) {
			for (int y = 1; y <= 10; y++) {
				if ((4 * x) + (5 * y) == 60) {
					System.out.println("(" + x + ", " + y + ")");
				}
			}
			for (int i = 1; i <= 4; i++) {
				for(int j =4; j>=1; j--){
					if(j > i) {
						System.out.print(" ");					
					}else {
						System.out.print("*");					
					}
				}
				System.out.println();
			}
		}
		for (int i = 1; i <=4; i++) {
			for(int j = 4; j>=1; j--){
				if(j < i) {
					System.out.print(" ");					
				}else {
					System.out.print("*");					
				}
		}
			System.out.println();		
		}	
		for(int i = 1; i<=4; i++) {
			for(int j = 4; j<=i; j--) {
				System.out.print("*");
			}
			System.out.println();
		}		
	}
}