package com.kh;

public class Person extends Object{
	
	//인스턴스 멤버 필드
	private String name;
	private int age;
	
	//정적 멤버 필드
	static String nationality = "한국";
	
	//디폴트 생성자
	public Person() {
		super();
	}
	
	public Person(String name, int age) {
		super();
		this.name = name;
		this.age = age;
	}
	
	//인스턴스 멤버 메소드
	//인스턴스멤버 , 정적멤버 모두 내부에 사용가능
	public void smile() {
		System.out.println("웃다");
		System.out.println(nationality);
	}
	
	//정적 멤버 메소드
	//정적 멤버만 내부에 사용가능
	static String getNationality() {
		return nationality;
	}

}
